@{
    ViewData["Title"] = "About Us";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #111;
        color: #fff;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        background-image: url('../Image/AboutBanner.jpg'); /* Change to an appropriate image */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    /* Glassmorphic Card */
    .about-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 10px 20px rgba(255, 215, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .about-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(255, 215, 0, 0.5);
    }

    /* Buttons */
    .btn-custom {
        background: linear-gradient(45deg, #ffcc00, #ff9900);
        border: none;
        padding: 10px 20px;
        color: #fff;
        font-weight: bold;
        transition: 0.3s;
        border-radius: 8px;
        text-decoration: none;
    }

    .btn-custom:hover {
        background: linear-gradient(45deg, #ff9900, #ff6600);
        transform: scale(1.05);
    }

</style>

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="display-4 text-uppercase">@ViewData["Title"]</h1>
        <p class="lead">Your go-to platform for discovering and recommending the best movies!</p>
    </div>
</div>

<!-- About Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="about-card p-4">
                <h2 class="text-warning fw-bold">Welcome to MovieWorld</h2>
                <p class="lead">
                    MovieWorld is a **one-stop platform** for all movie lovers! Whether you enjoy action-packed thrillers, heartwarming dramas, or mind-bending sci-fi, we bring you **tailored recommendations** based on your preferences.
                </p>
                <ul class="mt-3">
                    <li>🔥 **Discover** the latest and trending movies</li>
                    <li>🎬 **Explore** genres, directors, and ratings</li>
                    <li>⭐ **Rate & Review** movies to share your opinions</li>
                    <li>📅 **Stay Updated** with upcoming releases</li>
                </ul>
                <div class="text-center mt-4">
                    <a class="btn-custom" asp-area="" asp-controller="Movie" asp-action="Index">Explore Movies</a>
                </div>
            </div>
        </div>
    </div>
</div>
